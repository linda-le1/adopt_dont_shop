<h1> Edit Pet Listing </h1>
<h2><%= link_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %></h2>

<div class='center-form'>
<h2> Edit the following information: </h2>
<%= form_tag "/pets/#{@pet.id}", method: 'patch' do %>
  <%= label_tag :image_url %>
  <%= text_field_tag :image_url %><br/>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br/>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br/>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %><br/>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %><br/>
<%= submit_tag 'Submit' %>
<% end %>
</div>
